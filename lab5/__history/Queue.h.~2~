//---------------------------------------------------------------------------

#ifndef QueueH
#define QueueH
template <typename T>
class Node
{
public:
	Node* next;
	T data;
	Node(T data = T(),  Node* next = nullptr)
	{
		this->data = data;
		this->next = next;
	}
};

template <typename T>
class Queue
{
public:
	Queue();

	~Queue();

	void Pop();

	void Push(T);

	void Clear();

	int GetSize();

	T Front();
private:
	int size;

	Node<T>* head;
};

template <typename T>
Queue<T>::Queue()
{
	size = 0;
	head = nullptr;
}

template<typename T>
void Queue<T>::Push(T data)
{
	head = new Node<T>(data, head);
	size++;
}

template<typename T>
void Queue<T>::Pop()
{
	Node<T>* previous = this->head;
	for (int i = 0; i < size - 2; i++)
	{
		previous = previous->next;
	}
	Node<T>* todelete = previous->next;
	previous->next = nullptr;
	delete todelete;
	size--;
}

template<typename T>
int Queue<T>::GetSize()
{
	return size;
}

template<typename T>
void Queue<T>::Clear()
{
	while (size)
	{
		Node<T>* temp = head;
		head = head->next;
		delete temp;
		size--;
	}
}

template <typename T>
T Queue<T>::Front()
{
	Node<T>* temp = head;
	while (temp->next != nullptr)
	{
		temp = temp->next;
	}
	return temp->data;
}

template <typename T>
Queue<T>::~Queue()
{
	Clear();
}

#endif

